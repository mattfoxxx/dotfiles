#:::::::::::::::::::::::: Lock system :::::::::::::::::::::::::#
################################################################
set $Locker i3lock && sleep 1
set $mode_system System:   L :  | S :  | P :  | R :  | E :   
mode "$mode_system" {
    #bindsym l exec --no-startup-id i3lock-fancy, mode "default"
    bindsym l exec --no-startup-id i3lock -d -i /home/matze/Bilder/desktop.png, mode "default"
    bindsym s exec --no-startup-id $Lock systemctl suspend, mode "default"
    bindsym p exec --no-startup-id systemctl poweroff -i, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+x mode "$mode_system"

bindsym $mod+l exec --no-startup-id "~/.local/bin/fuzzy_lock.sh"
exec --no-startup-id xautolock -time 5 -locker '~/.local/bin/fuzzy_lock.sh' &

